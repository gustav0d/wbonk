{
  "name": "@wbonk/server",
  "version": "1.0.0",
  "private": "true",
  "scripts": {
    "config:local": "cp .env.example .env",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "serve": "node dist/src/index.js",
    "db:seed": "pnpm run db:seed:user && pnpm run db:seed:transaction",
    "db:seed:user": "CLI=1 tsx ./src/database/user-seed.ts",
    "db:seed:transaction": "CLI=1 tsx ./src/database/transaction-seed.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@entria/graphql-mongo-helpers": "^1.1.2",
    "bcryptjs": "^3.0.2",
    "dotenv-safe": "^9.1.0",
    "graphql": "^16.9.0",
    "graphql-relay": "^0.10.1",
    "jsonwebtoken": "^9.0.2",
    "kcors": "^2.2.2",
    "koa": "^2.15.3",
    "koa-bodyparser": "^4.4.1",
    "koa-graphql": "^0.12.0",
    "koa-logger": "^3.2.1",
    "koa-router": "^12.0.1",
    "mongodb-memory-server": "^10.1.4",
    "mongodb-memory-server-core": "^10.1.4",
    "mongoose": "^8.4.4",
    "secure-random": "^1.1.2",
    "uuid": "^11.1.0",
    "validator": "^13.15.0"
  },
  "devDependencies": {
    "@types/dotenv-safe": "^8.1.6",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/kcors": "^2.2.8",
    "@types/koa": "^2.15.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-logger": "^3.1.5",
    "@types/koa-router": "^7.4.8",
    "@types/node": "^20.14.8",
    "@types/secure-random": "^1.1.3",
    "@types/validator": "^13.15.0",
    "@wbonk/typescript-config": "workspace:*",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "supertest-graphql": "^1.1.4",
    "ts-jest": "^29.3.2",
    "tsx": "^4.15.7",
    "typescript": "^5.5.2"
  }
}
