{
  "extends": "@wbonk/typescript-config/base.json",
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/tsc",
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "preserveSymlinks": true,
    "typeRoots": ["./src/__tests__/@types"],
    "isolatedModules": true,
    "rootDir": "./src"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/__tests__/**/*",
    "src/modules/*/fixture/*",
    "test/**/*"
  ]
}
